{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "rootDir": "./src",

    "outDir": "./dist",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    "strict": true,
    "skipLibCheck": true,

    "typeRoots": ["@types", "./node_modules/@types"],

    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
  },

  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
}
